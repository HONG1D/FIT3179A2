{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "config": {
    "background": "#83d1f9",
    "view": {"stroke": "transparent"}
  },
  "projection": {"type": "mercator", "center": [108.5, 3], "scale": 3700, "translate": [630, 330]},
  "layer": [
    { "data": { "sphere": {} }, "mark": { "type": "geoshape", "fill": "#83d1f9" } },
    { "data": { "graticule": { "step": [2, 2] } }, "mark": { "type": "geoshape", "stroke": "#7f96a4", "strokeWidth": 0.6, "opacity": 0.7 } },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/HONG1D/FIT3179A2/f012552a47bf03998f2e2d441e30c494e45eaa49/updated_malaysia.json",
        "format": {"type": "topojson", "feature": "mytopojson"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/HONG1D/FIT3179A2/da9760377592d8db59e993d02fc949fed6ef419d/combined_state_info_location.csv"},
            "key": "State",
            "fields": ["Total_Domestic_Visitors_000"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Total_Domestic_Visitors_000",
          "type": "quantitative",
          "scale": {"scheme": "lighttealblue", "domain": [10000, 20000, 50000, 55000, 60000, 70000, 74000, 75000, 76000, 78000, 79000, 81000, 85000, 90000, 96000, 97000, 98000, 100000, 160000, 180000, 200000]},
          "title": "Visitors (‘000)"
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "Total_Domestic_Visitors_000", "title": "Visitors (‘000)","format": ","}
        ]
      }
    },
    {
       "data": {
        "url": "https://raw.githubusercontent.com/HONG1D/FIT3179A2/da9760377592d8db59e993d02fc949fed6ef419d/combined_state_info_location.csv"
      },
      "mark": {
        "type": "circle",
        "color": "#ff4000"
      },
      "encoding": {
        "longitude": {"field": "Longtitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"field": "State", "type": "nominal"}
      }

    },
    {
       "data": {
        "url": "https://raw.githubusercontent.com/HONG1D/FIT3179A2/da9760377592d8db59e993d02fc949fed6ef419d/combined_state_info_location.csv"
      },
      "mark": {
        "type": "text",
        "dx": -51.5,
        "fontSize": 15,
        "fontStyle": "italic",
        "color": "#ff4000"
      },
      "encoding": {
        "longitude": {"field": "Longtitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"field": "State", "type": "nominal"}
      }

    }
  ]
}


