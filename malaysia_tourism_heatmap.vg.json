{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/HONG1D/FIT3179A2/92e3ceedc40db9537f969f440562815696e0a7bf/long_format_state_visitor_yearly_info.csv"
  },
  "params": [
    {
      "name": "yearStart",
      "value": 2017,
      "bind": {
        "input": "range",
        "min": 2017,
        "max": 2023,
        "step": 1,
        "name": "Start Year:"
      }
    },
    {
      "name": "yearEnd",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2017,
        "max": 2023,
        "step": 1,
        "name": "End Year:"
      }
    }
  ],
  "transform": [
    {"filter": "datum.Visitors_000 != null && datum.Visitors_000 > 0"},
    {"filter": "datum.Year >= yearStart && datum.Year <= yearEnd"}
  ],
  "layer": [
    {
      "mark": {"type": "rect"},
      "encoding": {
        "x": {"field": "Year", "type": "ordinal", "title": "Year", "axis": {"labelAngle": 0}},
        "y": {"field": "State", "type": "nominal", "sort": "ascending", "title": "State"},
        "color": {
          "field": "Visitors_000",
          "type": "quantitative",
          "title": "Visitors ('000)",
          "scale": {
            "scheme": "purpleblue",
            "domain": [2000, 5000, 10000, 15000, 20000, 25000, 30000],
            "clamp": true
          }
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Year", "type": "ordinal"},
          {"field": "Visitors_000", "type": "quantitative", "title": "Visitors ('000)","format": ","}
        ]
      }
    },

    {
      "mark": {"type": "rule", "color": "darkorange", "strokeDash": [4, 4]},
      "encoding": {
        "x": {"datum": "2020"}
      }
    },

    {
      "mark": {
        "type": "text",
        "text": "COVID-19 Pandemic",
        "align": "center",
        "baseline": "bottom",
        "dy": -15,       
        "color": "darkorange",
        "fontSize": 12
      },
      "encoding": {
        "x": {"datum": "2020"},
        "y": {"datum": "Johor"}
      }
    },

    {
      "mark": {"type": "rule", "color": "red", "strokeDash": [4, 4]},
      "encoding": {
        "x": {"datum": "2021"}
      }
    },

    {
      "mark": {
        "type": "text",
        "text": "MCO Phase",
        "align": "center",
        "baseline": "bottom",
        "dy": -15,       
        "color": "red",
        "fontSize": 12
      },
      "encoding": {
        "x": {"datum": "2021"},
        "y": {"datum": "Johor"}
      }
    },

    {
      "mark": {"type": "rule", "color": "#d5ce11", "strokeDash": [4, 4]},
      "encoding": {
        "x": {"datum": "2022"}
      }
    },

    {
      "mark": {
        "type": "text",
        "text": "Cuti-Cuti Malaysia Program",
        "align": "center",
        "baseline": "bottom",
        "dy": -15,       
        "color": "#d5ce11",
        "fontSize": 12
      },
      "encoding": {
        "x": {"datum": "2022"},
        "y": {"datum": "Johor"}
      }
    },

    {
      "mark": {"type": "rule", "color": "#04c046", "strokeDash": [4, 4]},
      "encoding": {
        "x": {"datum": "2023"}
      }
    },

    {
      "mark": {
        "type": "text",
        "text": "Post Pandemic Recovery",
        "align": "center",
        "baseline": "bottom",
        "dy": -15,       
        "color": "#04c046",
        "fontSize": 12
      },
      "encoding": {
        "x": {"datum": "2023"},
        "y": {"datum": "Johor"}
      }
    }
  ]
}
