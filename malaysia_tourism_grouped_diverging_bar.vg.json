{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/HONG1D/FIT3179A2/92e3ceedc40db9537f969f440562815696e0a7bf/long_format_state_visitor_yearly_info.csv"
  },
  "transform": [
    {"filter": "datum.Year != 2017"}
  ],
  "params": [
    {
      "name": "YearSelection",
      "select": {"type": "point", "fields": ["Year"]},
      "bind": "legend"
    }
  ],
  "mark": {"type": "bar", "cornerRadiusEnd": 3},
  "width": "container",
  "height": 200,
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "axis": {"labelAngle": -45}
    },
    "y": {
      "field": "Growth_Rate",
      "type": "quantitative",
      "title": "Growth Rate (%)",
      "scale": {"domain": [-100, 300]}
    },
    "xOffset": {"field": "Year"},
    "color": {
      "field": "Year",
      "type": "ordinal",
      "scale": {
        "range": ["#0072B2", "#D55E00", "#C10020", "#595959", "#7C4700", "#F0E442"]
      },
      "legend": {"title": "Year"}
    },
    "opacity": {
      "condition": {"param": "YearSelection", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "State", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {
        "field": "Growth_Rate",
        "title": "Growth Rate (%)",
        "type": "quantitative",
        "format": ".2f"
      }
    ]
  },
  "config": {
    "axis": {"grid": false},
    "view": {"stroke": "transparent"}
  }
}
