{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "config": {
    "background": "#83d1f9",
    "view": {"stroke": "transparent"}
  },
  "projection": {"type": "mercator", "center": [108.5, 3], "scale": 4100, "translate": [680, 330]},
  "layer": [
    { "data": { "sphere": {} }, "mark": { "type": "geoshape", "fill": "#83d1f9" } },
    { "data": { "graticule": { "step": [2, 2] } }, "mark": { "type": "geoshape", "stroke": "#7f96a4", "strokeWidth": 0.6, "opacity": 0.7 } },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/HONG1D/FIT3179A2/f012552a47bf03998f2e2d441e30c494e45eaa49/updated_malaysia.json",
        "format": {"type": "topojson", "feature": "mytopojson"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/HONG1D/FIT3179A2/da9760377592d8db59e993d02fc949fed6ef419d/combined_state_info_location.csv"},
            "key": "State",
            "fields": ["Receipts_RM_million"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Receipts_RM_million",
          "type": "quantitative",
          "scale": {"scheme": "lightorange", "domain": [2000, 4000, 15000, 20000, 23000, 26000, 30000, 32000, 33000, 34000, 36000, 37000, 38000, 40000, 41000, 55000, 56000, 58000, 60000]},
          "title": ["Receipts", "(RM million)"]
        },
        "tooltip": [
          {"field": "properties.name", "title": "State"},
          {"field": "Receipts_RM_million", "title": "Receipts(RM million)","format": ","}
        ]
      }
    },
    {
       "data": {
        "url": "https://raw.githubusercontent.com/HONG1D/FIT3179A2/da9760377592d8db59e993d02fc949fed6ef419d/combined_state_info_location.csv"
      },
      "mark": {
        "type": "circle",
        "color": "#070809"
      },
      "encoding": {
        "longitude": {"field": "Longtitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"field": "State", "type": "nominal"}
      }

    },
    {
       "data": {
        "url": "https://raw.githubusercontent.com/HONG1D/FIT3179A2/da9760377592d8db59e993d02fc949fed6ef419d/combined_state_info_location.csv"
      },
      "mark": {
        "type": "text",
        "dx": -51.5,
        "fontSize": 15,
        "fontStyle": "italic"
      },
      "encoding": {
        "longitude": {"field": "Longtitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"field": "State", "type": "nominal"}
      }

    }
  ]
}
